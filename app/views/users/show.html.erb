<div class="col-md-6 col-md-offset-3">
    <div class="text-center">
      <h1><strong><%=@user.username%></strong></h1>
    </div><br>

    <div class="container">
      <div class="row">
        <div class="col-md-5">
          <% if @user.image_url %>
            <%= image_tag @user.image_url, class: "book-show" %>
          <% end %>
        </div>

        <div class="col-md-6">
          <h1><strong>Position: <%= @user_position %></strong></h1>
          <h3><strong>Name: <%= @user.full_name %></strong></h3>
          <h3><strong>Score: <%= @user.elo_ranking %></strong></h3>
          <h3><strong>Email: </strong><%= @user.email_com%></h3>

          <br><br>
          <%= link_to 'Edit User', edit_registration_path(@user), class: 'btn btn-success' %>
          <%= link_to "Back", root_path, class: 'btn btn-success'%>
        </div>
      </div>
  </div>
</div>
